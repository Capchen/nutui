var pxCheck = require('../wxs/pxCheck.wxs');
var style = require('../wxs/style.wxs');

function isImage(name) {
  return name.indexOf('/') !== -1;
}

function Classes(data) {
  var componentName = 'nut-icon'
 
  var classes = []
  
  if(isImage(data.name)){
    classes.push('nutui-iconfont__img')
  }else {
    classes.push(data.fontClassName)
    classes.push(data.classPrefix+'-'+data.name)
    classes.push(componentName)
  }
  return  classes.join(' ');
}

function Styled(data) {
  console.log(data)
  return style([
    {
      color: data.color,
      'font-size': pxCheck(data.size),
      width: pxCheck(data.size),
      height: pxCheck(data.size)
    },
  ]);
}

module.exports = {
  isImage: isImage,
  classes:Classes,
  styled:Styled
};
